{
  "tasks": [
    {
      "type": "shell",
      "label": "g++-6 build active file",
      "command": "/usr/local/bin/g++-6",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/local/bin"
      }
    }
  ],
  "version": "2.0.0"
}